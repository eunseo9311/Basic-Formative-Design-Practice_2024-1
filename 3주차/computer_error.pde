// Example 5-5: Button as switch
boolean button = false;

int x = 80;
int y = 50;
int w = 70;
int h = 50;

void setup() {
  size(480, 270); 
}

void draw() {
  if (button) {
    background(0,0,255);
    stroke(0);
    String s = "Error_Try_Again......";
    fill(200);
    textSize(20);
    text(s, 250, 200, 280, 320);
    
   String p = "";
    fill(200);
    textSize(10);
    text(p, 200, 5, 280, 320);
    
  } else {
    background(255);
    stroke(0);
    String i = "Hello, World !";
    fill(50);
    textSize(20);
    text(i, 300, 200, 280, 320);
    
    String j = "Life is too short, You need a Python";
    fill(50);
    textSize(15);
    text(j, 190, 230, 280, 320);
    
    
  }
  
  fill(175);
  rect(x,y,w,h);
}

// When the mouse is pressed, the state of the button is toggled.   
// Try moving this code to draw() like in the rollover example.  What goes wrong?
void mousePressed() {
  if (mouseX > x && mouseX < x+w && mouseY > y && mouseY < y+h) {
    button = !button;
  }  
}
